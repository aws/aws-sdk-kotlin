{
    "name": "aws-sdk-kotlin",
    "needs_compiler": false,
    "packages": [],
    "variables": {
        "gradlew": "{source_dir}/gradlew -p {source_dir}"
    },
    "build_dir": "target/build",
    "imports": [
        "JDK8"
    ],
    "env": {
        "JAVA_HOME": "{java_home}"
    },
    "hosts": {
        "windows": {
            "_comment": "windows GH runner fails with project defaults in gradle.properties",
            "!build_steps": [
                "{gradlew} assemble --parallel -Dorg.gradle.jvmargs=-Xmx2g"
            ],
            "!imports": [],
            "!env": {}
        }
    },
    "_comment": "prebuild step defined in .builder/actions/set_upstream_versions.py",
    "pre_build_steps": [
        "set-upstream-versions"
    ],
    "build_steps": [
        "{gradlew} assemble --parallel"
    ],
    "test_steps": [
        "{gradlew} publishToMavenLocal",
        "{gradlew} test allTests",
        "{gradlew} testAllProtocols"
    ],
    "upstream": [
        {
            "name": "smithy-kotlin"
        },
        {
            "name": "aws-crt-kotlin"
        }
    ],
    "variants": {
        "codebuild-svc-check": {
            "!imports": [],
            "!test_steps": [
                "{gradlew} test allTests"
            ]
        },
        "codegen-preview": {
            "!imports": [],
            "!build_steps": [],
            "!test_steps": []
        }
    }
}
