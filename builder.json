{
    "name": "aws-sdk-kotlin",
    "needs_compiler": false,
    "packages": [],
    "variables": {
        "gradlew": "{source_dir}/gradlew -p {source_dir}"
    },
    "build_steps": [
        "{gradlew} assemble --parallel"
    ],
    "test_steps": [
        "{gradlew} publishToMavenLocal",
        "{gradlew} test allTests",
        "{gradlew} testAllProtocols"
    ],
    "imports": [
        "JDK8"
    ],
    "build_dir": "target/build",
    "env": {
        "JAVA_HOME": "{java_home}"
    },
    "upstream": [
        {
            "name": "smithy-kotlin"
        },
        {
            "name": "aws-crt-kotlin"
        }
    ],
    "variants": {
        "codebuild-svc-check": {
            "!imports": [],
            "!test_steps": [
                "{gradlew} test allTests"
            ]
        }
    }
}
